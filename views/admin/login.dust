{>layout /}

{<styles}
	<link rel="stylesheet" type="text/css" href="/resources/css/admin.css" />
{/styles}

{<content}
	<form action="/admin/login?dest={dest}" method="post">
		<label class="pin-left">Username:</label>
		<input class="grid-12 mb20" type="text" name="username"/>
		<label class="pin-left">Password:</label>
		<input class="grid-12" type="password" name="password"/>
		<input class="grid-12" type="submit" value="Log In"/>
	</form>
{/content}
